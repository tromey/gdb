		     "get address of foo end"]

    set main_4 [get_hexadecimal_valueof "&main_4" "*UNKNOWN*" \
		     "get address of main_4 label"]
    set main_7 [get_hexadecimal_valueof "&main_7" "*UNKNOWN*" \
