    gdb_test "maintenance info blocks" \
	[multi_line \
	     "\\\[\\(block \\*\\) $::hex\\\] $foo_start\\.\\.$foo_end" \
	     "  entry pc: $foo_start" \
	     "  inline function: foo" \
	     "  symbol count: $::decimal" \
	     "  address ranges:" \
	     "    $foo_start\\.\\.$main_4" \
	     "    $main_7\\.\\.$foo_end"] \
	"block for foo has expected content"
}

