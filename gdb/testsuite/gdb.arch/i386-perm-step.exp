# Test stepping off of a permanent breakpoint.

require {is_any_target "i?86-*-*" "x86_64-*-*"}

standard_testfile

if {[prepare_for_testing "failed to prepare" ${testfile} ${srcfile}]} {
    return -1
}

if {[gdb_start_cmd] < 0} {
    return -1
}
gdb_test "" ".*reakpoint .*, main .*${srcfile}.*" "start"

# The bug was a crash, so any expected output is fine here.  Still,
# look for the expected source line.
gdb_test "step" ".* nothing .*"
